# Configuration file for Azure deployment settings
# This file contains environment-specific configurations that can be easily modified

# Subscription and Resource Group Settings
AZURE_SUBSCRIPTION_ID=""  # Add your subscription ID here
AZURE_TENANT_ID=""        # Add your tenant ID here

# Environment-specific Resource Groups
DEV_RESOURCE_GROUP="rg-innovation-dev"
TEST_RESOURCE_GROUP="rg-innovation-test"
PROD_RESOURCE_GROUP="rg-innovation-prod"

# Default Azure Regions
PRIMARY_REGION="East US"
SECONDARY_REGION="West US 2"

# Application Settings
APP_NAME="innovation"
PROJECT_NAME="Innovation Platform"

# Container Registry Settings (optional)
CONTAINER_REGISTRY_NAME="crinnovation"
CONTAINER_REGISTRY_SKU="Basic"

# Network Settings
VIRTUAL_NETWORK_ADDRESS_PREFIX="10.0.0.0/16"
CONTAINER_APPS_SUBNET_PREFIX="10.0.1.0/24"
FUNCTIONS_SUBNET_PREFIX="10.0.2.0/24"

# Monitoring and Logging
LOG_RETENTION_DAYS=30
ENABLE_APPLICATION_INSIGHTS=true
ENABLE_LOG_ANALYTICS=true

# Security Settings
MINIMUM_TLS_VERSION="1.2"
ALLOW_PUBLIC_ACCESS=true
ENABLE_HTTPS_ONLY=true

# Backup and Recovery
ENABLE_BACKUP=false
BACKUP_RETENTION_DAYS=7
ENABLE_GEO_REDUNDANCY=false

# Cost Management
ENABLE_AUTO_SHUTDOWN=true
AUTO_SHUTDOWN_TIME="19:00"
AUTO_SHUTDOWN_TIMEZONE="Eastern Standard Time"

# Scaling Configuration
MIN_REPLICAS=0
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Development Environment Overrides
DEV_MIN_REPLICAS=0
DEV_MAX_REPLICAS=3
DEV_ENABLE_BACKUP=false
DEV_LOG_RETENTION_DAYS=7

# Test Environment Overrides
TEST_MIN_REPLICAS=1
TEST_MAX_REPLICAS=5
TEST_ENABLE_BACKUP=true
TEST_LOG_RETENTION_DAYS=30

# Production Environment Overrides
PROD_MIN_REPLICAS=2
PROD_MAX_REPLICAS=10
PROD_ENABLE_BACKUP=true
PROD_LOG_RETENTION_DAYS=90
PROD_ENABLE_GEO_REDUNDANCY=true

# Service Tier Configurations

# Container Apps Tiers
DEV_CONTAINER_APPS_CONSUMPTION=true
TEST_CONTAINER_APPS_CONSUMPTION=false
PROD_CONTAINER_APPS_CONSUMPTION=false

DEV_CONTAINER_APPS_WORKLOAD_PROFILE="Consumption"
TEST_CONTAINER_APPS_WORKLOAD_PROFILE="D4"
PROD_CONTAINER_APPS_WORKLOAD_PROFILE="D8"

# Azure Functions Tiers
DEV_FUNCTIONS_SKU="Y1"
DEV_FUNCTIONS_TIER="Dynamic"

TEST_FUNCTIONS_SKU="EP1"
TEST_FUNCTIONS_TIER="ElasticPremium"

PROD_FUNCTIONS_SKU="EP2"
PROD_FUNCTIONS_TIER="ElasticPremium"

# Azure AI Search Tiers
DEV_SEARCH_SKU="free"
DEV_SEARCH_REPLICAS=1
DEV_SEARCH_PARTITIONS=1

TEST_SEARCH_SKU="basic"
TEST_SEARCH_REPLICAS=1
TEST_SEARCH_PARTITIONS=1

PROD_SEARCH_SKU="standard"
PROD_SEARCH_REPLICAS=2
PROD_SEARCH_PARTITIONS=1

# Storage Account Tiers
DEV_STORAGE_SKU="Standard_LRS"
TEST_STORAGE_SKU="Standard_LRS"
PROD_STORAGE_SKU="Standard_GRS"

# Custom Domain Settings (optional)
CUSTOM_DOMAIN_ENABLED=false
API_CUSTOM_DOMAIN=""
FRONTEND_CUSTOM_DOMAIN=""
SSL_CERTIFICATE_NAME=""

# Integration Settings
ENABLE_CONTAINER_REGISTRY=false
ENABLE_KEY_VAULT=false
ENABLE_SERVICE_BUS=false
ENABLE_COSMOS_DB=false

# Notification Settings
NOTIFICATION_EMAIL=""
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=""

# Tags Configuration
DEFAULT_TAGS='{"Project":"Innovation","ManagedBy":"Bicep","CostCenter":"Development"}'

# Feature Flags
ENABLE_SEMANTIC_SEARCH=true
ENABLE_VECTOR_SEARCH=true
ENABLE_PRIVATE_ENDPOINTS=false
ENABLE_MANAGED_IDENTITY=true

# Performance Settings
FUNCTIONS_TIMEOUT_MINUTES=5
CONTAINER_CPU_LIMIT="1.0"
CONTAINER_MEMORY_LIMIT="2Gi"

# Disaster Recovery
ENABLE_CROSS_REGION_BACKUP=false
BACKUP_REGION="West US 2"
RTO_MINUTES=60
RPO_MINUTES=15
